#pt
	javascript:
		(function() {
	      var space = new CanvasSpace( "hello", "#3399CC" ).display( "#pt" );
	      var form = new Form( space );
	      var dot = new Circle( 250, 250 ).setRadius( 50 );
	      var another = new Circle( 100, 100 ).setRadius( 50 );
	      var bot = {
	          animate: function ( time, fs, context ) {
	              form.fill( "#999" ).text( new Point( 20, 20 ), "frame rate is " + (1000 / fs) );
	              form.fill( "#5AF" ).stroke( false );
	              dot.setRadius( Math.abs( 500 - time % 1000 ) / 10 + 50 );
	              form.circle( dot );
	              form.fill( false ).stroke( "#fc0", 5 );
	              form.circle( another );
	              another.setRadius(Math.abs( 500 - time % 1000 ) / 10 + 50 )
	              var hits = another.intersectCircle( dot );
	              form.fill('#000').text(new Point(40, 40), hits.length)
	              if (hits.length > 0) {
	                  form.stroke( "#000" ).fill( "#0C9" );
	                  form.line( new Line( hits[0] ).to( hits[1] ) );
	                  form.points( hits, 7 , true );
	              }
	          },
	          onMouseAction: function ( type, x, y, evt ) {
	              if (type == "move") {
	                  another.set( x, y )
	              }
	          }
	      };
	      space.add( bot );
	      space.bindMouse();
	      space.play();
	  })();